<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <% if (data.profile) { %>
        <img src="/dashboard/profile/<%= data.profile.filename %>" class="img-circle" alt="Profile Picture">
        <% } else { %>
        <img src="/dist/img/photo.png" class="img-circle" alt="Profile Picture">
        <% } %>
      </div>
      <div class="pull-left info">
        <p><%= data.user.username %></p>
        <!-- Status -->
        <a><i class="fa fa-id-card"></i> <%= data.user.role %></a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">MAIN NAVIGATION</li>
      <!-- Optionally, you can add icons to the links -->
      <li class="menu">
        <a href="/dashboard">
          <i class="fa fa-home"></i><span>Home</span>
        </a>
      </li>
      <li class="menu">
        <a href="/dashboard/document">
          <i class="fa fa-folder-open"></i><span>Input Document</span>
        </a>
      </li>
      <% if (data.user.role !== 'User') { %>
      <li class="menu">
        <a href="/dashboard/user">
          <i class="fa fa-user"></i><span>Manage User</span>
        </a>
      </li>
      <% } %>
    </ul>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
